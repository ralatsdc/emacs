# alias source.bash_vagrant="source.bash_addgene ; source $ADDGENE_PROJECT_HOME/addgene-dev-env/.bash_vagrant"
alias cd.addgene-bioinformatics="cd ~/Projects/Addgene/addgene-bioinformatics ; workon addgene-bioinformatics"

# Springbok development aliases
alias cd.system-planning-toolbox="cd ~/Workspace/Java/system-planning-toolbox"

# IQT development aliases
# alias conda.activate="source ~/miniconda3/bin/activate"
alias cd.FWOC="conda activate fwoc ; cd ~/Projects/IQT/FWOC"

# added by Miniconda3 4.9.2 installer
# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('/Users/rleclair/opt/miniconda3/bin/conda' 'shell.bash' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/Users/rleclair/opt/miniconda3/etc/profile.d/conda.sh" ]; then
        . "/Users/rleclair/opt/miniconda3/etc/profile.d/conda.sh"
    else
        export PATH="/Users/rleclair/opt/miniconda3/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<
