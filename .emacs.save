(defun my-objc-mode-hook ()
  ;; my customizations for objc-mode
  (setq auto-mode-alist
	(append '(("\\.h$" . objc-mode)
		  ("\\.m$" . objc-mode))))
  (setq-default indent-tabs-mode nil)
  (setq c-basic-offset 4)
  )
(add-hook 'objc-mode-hook 'my-objc-mode-hook)

